---
layout: null
permalink: /atomic_atom.xml
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.title }}</title>
 <link href="{{ site.url }}{{ site.baseurl }}/atomic_atom.xml" rel="self"/>
 <link href="{{ site.url }}{{ site.baseurl }}"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.url }}{{ site.baseurl }}</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>{% for post in site.posts limit:10 %}{% assign raf_counter = post.rafagas.size %}{% if post.rafagas %} {% for rafaga in post.rafagas reversed %}
      <entry>
        <title>{{rafaga.desc | xml_escape }}{% if rafaga.via %} via {{rafaga.via | xml_escape }}{% endif %}</title>
        <link href="{{ rafaga.link | xml_escape}}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ site.url }}{{ site.baseurl }}/{{ post.date | date: '%Y/%m-%e'}}.html#{{ raf_counter }}</id>
        <content type="html"><![CDATA[
          Post {{ raf_counter }} of {{ post.rafagas.size }} at issue 
          <a href="{{ site.url }}{{ site.baseurl }}/{{ post.date | date: '%Y/%m-%e'}}.html">#{{post.rid}}</a>
          ]]>
        </content>
      </entry>{% assign raf_counter = raf_counter | minus: 1 %} {% endfor %}{% endif %} {% endfor %}
</feed>
