layout: null
permalink: /atom.xml
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.title }}</title>
 <link href="{{ site.url }}{{ site.baseurl }}/atom.xml" rel="self"/>
 <link href="{{ site.url }}{{ site.baseurl }}"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.url }}{{ site.baseurl }}</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>

 {% for post in site.posts limit:25 %}
 <entry>
   <title> {% if post.rafagas %}NÂº{{ post.rid}}:{% for rafaga in post.rafagas %} {{rafaga.keyw | downcase}}{% unless forloop.last %}, {% endunless %} {% endfor %} {% else %}{{ post.title }}{% endif %} </title>
   <link href="{{ site.url }}/rafagas{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.url }}/rafagas{{ post.id }}</id>
   <content type="html">
&lt;h1 style="box-sizing: border-box; margin-bottom: 0.5rem; line-height: 1.25; color: rgb(48, 48, 48); font-size: 2rem; margin-top: 0px; font-family: &quot;Helvetica Neue&quot;, Helvetica, Arial, sans-serif;">{% if post.rafagas %}N&#176;{{ post.rid}}:{% for rafaga in post.rafagas %} {{rafaga.keyw | downcase}}{% unless forloop.last %}, {% endunless %} {% endfor %} {% else %}{{ post.title }}{% endif %}&lt;/h1>
&lt;p style="box-sizing: border-box; margin-bottom: 1rem; color: rgb(154, 154, 154); font-family: &quot;Helvetica Neue&quot;, Helvetica, Arial, sans-serif; font-size: 18px;">
&lt;time datetime="{{ page.date | date_to_xmlschema }}" class="post-date">{{ page.date | date: "%a, %d %b %Y" }}&lt;/time>
by {{post.author}}
&lt;/p>
&lt;ul style="box-sizing: border-box; margin-top: 0px; margin-bottom: 1rem; color: rgb(81, 81, 81); font-family: &quot;Helvetica Neue&quot;, Helvetica, Arial, sans-serif; font-size: 18px;">{% for rafaga in post.rafagas %}
&lt;li style="box-sizing: border-box;">
{{rafaga.desc | xml_escape }} &lt;br style="box-sizing: border-box;">
&lt;a href="{{rafaga.link| xml_escape }}" style="box-sizing: border-box; color: rgb(38, 139, 210); font-size: 1em;">{{rafaga.link| xml_escape }}&lt;/a>&lt;/li>
{% endfor %}
&lt;/ul>
</content>
 </entry>
 {% endfor %}

</feed>
